{% macro govukPublishingSearch(params) %}
  <div class="gem-c-search" data-module="gem-search">
    <label class="gem-c-search__label" for="{{ params.id }}">{{ params.label.text or params.label }}</label>

    <input class="gem-c-search__input" id="{{ params.id }}" name="{{ params.name }}" type="search"{% if params.value %} value="{{ params.value }}"{% endif %}>
    <button class="gem-c-search__submit" type="submit">
      <svg class="gem-c-search__icon" width="27" height="27" viewBox="0 0 27 27" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" focusable="false">
        <circle cx="12.0161" cy="11.0161" r="8.51613" stroke="currentColor" stroke-width="3"></circle>
        <path d="m19.2322 19.2322 5.25 5.25" stroke="currentColor" stroke-width="3" stroke-linecap="round"></path>
      </svg>
      <span class="govuk-visually-hidden">Search</span>
    </button>
  </div>
{% endmacro %}